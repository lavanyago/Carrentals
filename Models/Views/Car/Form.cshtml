@model CarViewModel

@{
    string pageTitle = "New car";
    string action = "Create";

    if (ViewBag.IsEditing == true) {
        // Editing
        pageTitle = "Update car";
        action = "Update";
    }
}


<div>
    <h2>@pageTitle</h2>
    <hr/>
    <div>
        <form asp-action="@action">
            <input type="hidden" asp-for="carId"/>
            <div class="form-group">
                <label asp-for="name">name</label>
                <input type="text" class="form-control" asp-for="name"/>
                <span class="text-danger" asp-validation-for="name"></span>
            </div>
            <div class="form-group">
                <label asp-for="model">model</label>
                <input type="text" class="form-control" asp-for="model"/>
                <span class="text-danger" asp-validation-for="model"></span>
            </div>
            <div class="form-group">
                <label asp-for="year">Year</label>
                <input type="text" class="form-control" asp-for="year"/>
                <span class="text-danger" asp-validation-for="year"></span>
            </div>
            <div class="form-group">
                <label asp-for="type">Year</label>
                <input type="text" class="form-control" asp-for="type"/>
                <span class="text-danger" asp-validation-for="type"></span>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
    <br/>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
